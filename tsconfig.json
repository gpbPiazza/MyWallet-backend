{
  "compilerOptions": {
    "target": "es2017",                           
    "module": "commonjs",                     
    "lib": ["es6"],                        
    "allowJs": true,                      
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "removeComments": true,                
    "strict": true,                           
    "typeRoots": [
      "./src/types","./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,      
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true     
  }
}
